{
  "name": "sora-js-sdk",
  "version": "2021.2.3",
  "description": "WebRTC SFU Sora JavaScript SDK",
  "main": "dist/sora.min.js",
  "module": "dist/sora.mjs",
  "types": "dist/sora.d.ts",
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "fmt": "npm run fmt --workspaces",
    "test": "npm run test --workspaces",
    "start": "npx serve -S -l 8080 ./example",
    "doc": "npx typedoc",
    "release:major": "./scripts/versioning.sh major",
    "release:minor": "./scripts/versioning.sh minor",
    "release:patch": "./scripts/versioning.sh patch",
    "release:canary": "./scripts/versioning.sh canary"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shiguredo/sora-js-sdk.git"
  },
  "author": "Shiguredo Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/shiguredo/sora-js-sdk/issues"
  },
  "homepage": "https://github.com/shiguredo/sora-js-sdk#readme",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "npm-check-updates": "^12.0.3",
    "serve": "^13.0.2",
    "typedoc": "^0.22.10"
  },
  "resolutions": {
    "get-pkg-repo": "4.1.2"
  },
  "workspaces": [
    "packages/go-wasm",
    "packages/e2ee",
    "packages/sdk"
  ]
}
